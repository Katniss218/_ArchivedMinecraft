
command /setfood <text> [<text>]:
	trigger:
		if arg-2 is set:
			set {_plr} to arg-1 parsed as player
			set {_food} to arg-2 parsed as number
			set food of {_plr} to ({_food} / 2) # Skript uses 0..10, Minecraft uses 0..20. We use minecraft's.
		else:
			set {_food} to arg-1 parsed as number
			set food of player to ({_food} / 2) # Skript uses 0..10, Minecraft uses 0..20. We use minecraft's.
